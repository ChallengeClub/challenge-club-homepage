---
permalink: /sitemap.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
{%- for p in collections.all %}
  {# ステージングやnoindexページを除外（front matterにrobots: "noindex"があるものを除外） #}
  {%- if not p.data.robots or ('noindex' not in p.data.robots) %}
    {%- set loc = (p.url | url) | absoluteUrl(site.url) %}
    {# lastmod は updated/dateModified/ページ日付の順で採用 #}
    {%- set last = p.data.updated or p.data.dateModified or p.date %}
  <url>
    <loc>{{ loc }}</loc>
    {%- if last %}<lastmod>{{ last | date("yyyy-MM-dd") }}</lastmod>{% endif %}
    <changefreq>{% if p.url == "/" %}weekly{% else %}monthly{% endif %}</changefreq>
    <priority>{% if p.url == "/" %}1.0{% else %}0.5{% endif %}</priority>
  </url>
  {%- endif %}
{%- endfor %}
</urlset>